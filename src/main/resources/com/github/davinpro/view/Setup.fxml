<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
  stylesheets="@/com/github/davinpro/style sheets/darkmode.css"
  xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.github.davinpro.viewmodel.SetupController">
  <GridPane layoutX="200.0" layoutY="200.0" prefHeight="70.0" prefWidth="200.0">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <Label alignment="CENTER" contentDisplay="CENTER" text="Name:" textFill="#eeeeee"
      GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
      <GridPane.margin>
        <Insets right="10.0"/>
      </GridPane.margin>
    </Label>
    <TextField fx:id="txtfName" promptText="Player 1" GridPane.columnIndex="1"/>
    <Label alignment="CENTER" contentDisplay="CENTER" text="Body Color:" textFill="#eeeeee"
      GridPane.halignment="RIGHT" GridPane.rowIndex="1">
      <padding>
        <Insets right="10.0"/>
      </padding>
    </Label>
    <ColorPicker fx:id="bodyColorPicker" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <value>
        <Color red="0.02394249476492405" green="0.7605262994766235" blue="0.19581204652786255"/>
      </value>
    </ColorPicker>
    <ColorPicker fx:id="headColorPicker" layoutX="110.0" layoutY="33.0" GridPane.columnIndex="1"
      GridPane.rowIndex="2">
      <value>
        <Color red="0.9710526466369629" green="0.03776315972208977" blue="0.03776315972208977"/>
      </value>
    </ColorPicker>
    <Label alignment="CENTER" contentDisplay="CENTER" layoutX="38.0" layoutY="36.0"
      text="Head Color:" textFill="#eeeeee" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
      <padding>
        <Insets right="10.0"/>
      </padding>
    </Label>
  </GridPane>
  <Label layoutX="235.0" layoutY="14.0" text="Setup" textFill="#0c8618">
    <font>
      <Font name="System Bold" size="48.0"/>
    </font>
  </Label>
  <Button layoutX="14.0" layoutY="361.0" mnemonicParsing="false" onAction="#switchToMainMenu"
    text="Back"/>
  <Button layoutX="250.0" layoutY="342.0" mnemonicParsing="false" onAction="#startGame"
    prefHeight="39.0" prefWidth="100.0" text="Start">
    <font>
      <Font size="18.0"/>
    </font>
  </Button>
</AnchorPane>
