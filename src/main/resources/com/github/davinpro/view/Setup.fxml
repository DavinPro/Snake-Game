<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@/com/github/davinpro/style sheets/darkmode.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.davinpro.viewmodel.Setup">
   <children>
      <GridPane layoutX="200.0" layoutY="200.0" prefHeight="70.0" prefWidth="200.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Name:" textFill="#eeeeee" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
               <GridPane.margin>
                  <Insets right="10.0" />
               </GridPane.margin>
            </Label>
            <TextField fx:id="txtfName" promptText="Player 1" GridPane.columnIndex="1" />
            <Label alignment="CENTER" contentDisplay="CENTER" text="Snake Color:" textFill="#eeeeee" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
               <padding>
                  <Insets right="10.0" />
               </padding>
            </Label>
            <ColorPicker fx:id="clrpSnakeColor" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <Label layoutX="239.0" layoutY="14.0" text="Setup" textFill="#006f14">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
      <Button layoutX="14.0" layoutY="361.0" mnemonicParsing="false" onAction="#switchToMainMenu" text="Back" />
      <Button layoutX="250.0" layoutY="342.0" mnemonicParsing="false" onAction="#startGame" prefHeight="39.0" prefWidth="100.0" text="Start">
         <font>
            <Font size="18.0" />
         </font></Button>
   </children>
</AnchorPane>
